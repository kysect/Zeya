@page "/validation-policies/create"
@using Microsoft.AspNetCore.Components.Forms


<h3>Create Validation policy</h3>

<EditForm Model="@_formData" OnValidSubmit="@CreatePolicy">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="name">Name</label>
        <InputText id="name" class="form-control" @bind-Value="_formData.Name" />
        <ValidationMessage For="@(() => _formData.Name)" />
    </div>

    <div class="form-group">
        <label for="rules">Rules</label>
        <InputTextArea rows="4" id="rules" class="form-control" @bind-Value="_formData.Content" />
        <ValidationMessage For="@(() => _formData.Content)" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</EditForm>
