@page "/validation-policies/{PolicyId:guid}/repository"
@using Microsoft.AspNetCore.Components.Forms

<h3>Add policy repository</h3>

<EditForm Model="@_formData" OnValidSubmit="@AddPolicyRepository">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="name">Github owner</label>
        <InputText id="name" class="form-control" @bind-Value="_formData.GithubOwner" />
        <ValidationMessage For="@(() => _formData.GithubOwner)" />
    </div>

    <div class="form-group">
        <label for="rules">Github repository name</label>
        <InputText id="rules" class="form-control" @bind-Value="_formData.GithubRepository" />
        <ValidationMessage For="@(() => _formData.GithubRepository)" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</EditForm>